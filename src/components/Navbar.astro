---
import { Image } from "astro:assets";
import logo from '../../public/images/logo.jpg'
---

<nav class="navbar">
    <div class="logo-container">
        <a href="/">
            <Image  class="logo" src={logo} alt="GYMLAND LOGO"/>
        </a>
    </div>
    <div class="links-container">
        <a href="/sproducts">Prendas</a>
        <a href="/products">gymshark</a>
        <a href="/wbest">WBest</a>
    </div>
</nav>


<style>

    .logo-container{
        width: 130px;
        text-align: right;
    }

    .logo{
        height: auto;
        width: 80px;
    }

    .navbar{
        z-index: 2;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 80px;
        max-width: 100%;
        background-color: #000000;
        font-family: 'Montserrat', sans-serif;

        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    .links-container{
        width: 60%;
    }

    .links-container > a{
        color: #ffffff;
        margin: 0 17px;
        text-decoration: none;
        font-size: 1.1rem;
        transition: color 0.3s ease;
    }

    .links-container > a:hover{
        color: #8d99ae;
        transition: color 0.3s ease;
    }

    @media screen and (max-width: 767px) {
        
    .logo-container{
        width: auto;
        padding-left: 10px;
        text-align: left;
    }

    .logo{
        height: auto;
        width: 50px;
    }

    .navbar{
        font-family: 'Montserrat', sans-serif;

        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    .links-container{
        width: 80%;
    }

    .links-container > a{
        margin: 0 10px;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }
}






</style>